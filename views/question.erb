<h1><%=@question.text%></h1>

<ul>
  <% @question.answers.each do |answer| %>
    <li><a href="/answers/<%= answer.id %>"><%= answer.text %></a></li>
  <% end %>
</ul>

<form class="" action="/questions/<%=@question.id%>" method="post">

  <div class="form-group">
    <label for="text">Add an answer</label>
    <input type="text" name="text" class="form-control">
    <button type="submit" class="btn">Create Answer</button>
  </div>
</form>

<form action="/questions/<%=@question.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="update_question">Update question text</label>
  <input type="text" name="update_question" class="form-control">
  <button type="submit" class="btn">Update Question</button>
</form>

<form action="/questions/<%=@question.id%>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button type="submit" class="btn">Delete Question</button>
</form>
