<h1><%=@survey.title%></h1>
<h3>This survey has been taken <%= @survey.counter%> times.</h3>
<ul>
  <% @survey.questions.each do |question| %>
    <li>
      <a href="/questions/<%= question.id %>"><%= question.text %></a>
      <ul>
        <% question.answers.each do |answer| %>
          <li><%=answer.text%> <br> times: <%=answer.counter%></li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>

<form class="" action="/surveys/<%=@survey.id%>" method="post">
  <h4>Add a question</h4>
  <div class="form-group">
    <label for="text">Question text</label>
    <input type="text" name="text" class="form-control">
    <button type="submit" class="btn">Create Question</button>
  </div>
</form>

<form action="/surveys/<%=@survey.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="update_survey">Please enter a new title.</label>
  <input type="text" name="update_survey" class="form-control">
  <button type="submit" class="btn">Update Survey</button>
</form>

<form action="/surveys/<%=@survey.id%>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button type="submit" class="btn">Delete Survey</button>
</form>
